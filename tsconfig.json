{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2016"
    ],
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}